@model GroupViewModel

@{
    Layout = null;
}

<div class="content-body">
    <section>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-content">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-12">
                                    <fieldset class="form-group">
                                        <label>نام</label>
                                        <input type="text" class="form-control" asp-for="Name" autocomplete="off" disabled>
                                        <span asp-validation-for="Name" class="invalid-feedback"></span>
                                    </fieldset>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <input onclick="deleteGroupConfirm('@Model.Id')" type="button" value="حذف" class="btn btn-danger btn-block" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

</div>