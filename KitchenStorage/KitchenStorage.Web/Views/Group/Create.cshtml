@model KitchenStorage.Entities.Group

@{
    Layout = null;
}

<div class="col-md-12">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" id="group-name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input onclick="createGroup()" value="افزودن" class="btn btn-primary btn-block" />
        </div>
    </form>
</div>